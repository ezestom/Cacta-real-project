---
import logo from "/public/logo.png";
import twitter from "../icons/twitter.svg";
import linkedin from "../icons/linkedin.svg";
import youtube from "../icons/youtube.svg";
import world from "../icons/world.svg";
// import { Image } from "astro:assets";
---

<footer
	class="w-full my-5 flex gap-1 md:justify-between justify-center items-center flex-wrap text-white footer">
	<a
		target="_blank"
		href="https://ezestom.github.io/portfolio/"
		class="transition hover:opacity-60">
		<div class="flex flex-col items-center tracking-tighter">
			<span class="span-footer">Created & Designed by</span>

			<span class="span-footer flex items-center gap-1"
				>Eze Stom <img
					class=""
					src={world.src}
					alt="world-icon"
				/></span
			>
		</div>
	</a>
	<p class="flex items-center flex-col gap-1 text-center tracking-tighter">
		<span class="span-footer flex items-center gap-1">
			<img class="w-9" src={logo.src} alt="logo image" /> Â© 2024 Cacta-Eco.</span
		>

		<span class="span-footer">All rights reserved.</span>
	</p>
	<div class="flex gap-3">
		<a target="_blank" href="https://www.linkedin.com/in/ezequielstom/">
			<img
				class="transition hover:opacity-40"
				src={twitter.src}
				alt="twitter icon"
			/>
		</a>
		<a target="_blank" href="https://www.linkedin.com/in/ezequielstom/">
			<img
				class="transition hover:opacity-40"
				src={linkedin.src}
				alt="twitter icon"
			/>
		</a>
		<a target="_blank" href="https://www.youtube.com/@ezequielstom6745">
			<img
				class="transition hover:opacity-40"
				src={youtube.src}
				alt="twitter icon"
			/>
		</a>
	</div>
</footer>

<style>
	.footer {
		z-index: 60;
		color: white;
		padding: 0 2.5%;
		margin: auto;
		position: absolute;
		bottom: 0;
		font-size: .75rem;
	}
	.span-footer {
		color: white;
		font-weight: normal;
	}
</style>
