---
import { Form } from "./Form/Form";
import { Image } from "astro:assets";
import tractor from "../img/agriculture.jpg";
import LandingFooter from "./LandingFooter.astro";
---

<section
	class="w-screen h-screen text-center bg-black/90 relative overflow-hidden z-40 flex justify-start items-center"
	data-header-color="black"
	id="contact">
	<article
		class="z-20 top-0 bottom-0 w-full lg:w-1/2 h-full justify-center px-2 md:px-0 items-center text-star
		flex flex-col">
		<aside class="text-start aside">
			<h5>
				<span class="text-2xl font-bold text-white">Contacto</span>
			</h5>
			<hr />
			<h6 class="text-xl font-semibold text-white">
				<span>Simplifica tu gestión</span>, maximiza la sostenibilidad y <br
				/>
				transforma tu empresa con sus beneficios. ​
			</h6>
			<p class="font-normal text-white text-pretty max-w-[55ch]">
				Prevé el cambio, moldéalo a tu favor.
			</p>
		</aside>

		<Form client:visible />
	</article>

	<div class="absolute bottom-0 top-0 h-screen w-full">
		<Image class="bg-image1" src={tractor} alt="Image of cow" />
	</div>
	<LandingFooter />
</section>

<style>
	.aside {
		backdrop-filter: blur(5px);
		border-radius: 0.5rem;
		padding: 0.5rem 1rem;
		background-color: rgba(255, 255, 255, 0.1);
		box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
		filter: brightness(1.1);
	}
	.bg-image1 {
		z-index: -10;
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		mask: radial-gradient(circle at right, white 60%, transparent 100%);
	}
	hr {
		/* margin-left: 2rem; */
		height: 1px;
		margin-bottom: 0.5rem;
		width: 15ch;
		border: none;
		background: linear-gradient(
			to right,
			transparent 0%,
			#4daa57 50%,
			transparent 100%
		);
	}
	span {
		color: #4daa57;
		font-weight: 800;
	}
	@media (width < 768px) {
		.bg-image1 {
			mask: radial-gradient(circle at right, white 0%, transparent 100%);
		}
	}
</style>
