---
interface anchor {
	href: string;
	name: string;
}
const { href, name } = Astro.props;
---

<a href={href} id="btn">{name}</a>

<style>
	a {
		padding: 10px 20px;
		border-radius: .75rem;
		font-size: 17px;
		font-weight: 500;
		color: #ffffff80;
		text-shadow: none;
		background: transparent;
		cursor: pointer;
		box-shadow: transparent;
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: 0.5s ease;
		user-select: none;
		z-index: 50;
	}

	#btn:hover,
	:focus {
		color: #ffffff;
		background: #008cff;
		border: 1px solid #008cff;
		text-shadow:
			0 0 5px #ffffff,
			0 0 10px #ffffff,
			0 0 20px #ffffff;
		box-shadow:
			0 0 5px #008cff,
			0 0 20px #008cff,
			0 0 50px #008cff,
			0 0 100px #008cff;
	}
</style>
