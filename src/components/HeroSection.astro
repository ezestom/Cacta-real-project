---
import video from "../video/farm-video1.mp4";
---

<section
	class="w-screen h-screen text-center bg-black/90 relative overflow-hidden text-white z-40"
	data-header-color="white">
	<div
		class="z-50 absolute m-auto top-0 bottom-0 flex flex-col items-center justify-center w-full md:w-1/2">
		<span class="block m-auto w-full h1">
			<header class="header">
				<hr />
				<h1 class="text-white text-5xl md:text-6xl font-bold">
					<strong class=" font-semibold">Cacta~Eco</strong><br />
					<span class="text-6xl md:text-7xl font-bold tracking"
						>Software</span
					>
				</h1>
				<h2 class="text-white text-3xl font-bold">
					<p>
						El <span class="text-4xl font-bold">futuro</span> de tu negocio
					</p>

					<p class="text-xl">y de la industria primaria.</p>
				</h2>

				<div class="mt-5">
					<p
						class="text-white text-2xl font-semibold flex items-center">
						Automatiza {">"} Calcula {">"} Reporta
					</p>
					<p class="text-white text-3xl font-bold">
						<span>El impacto ambiental</span>
					</p>
					<p class="font-semibold text-xl">de tu empresa.</p>
				</div>
				<hr class="" />
			</header>
		</span>
	</div>

	<!-- <footer
		class="absolute text-md font-semibold m-auto right-0 left-0 inline-block bottom-10 z-40">
		<a
			class="p-2 rounded px-6 py-2 backdrop-blur-md bg-white/20 hover:bg-white hover:text-white"
			href="#">
			Comienza Gratis</a
		>
	</footer> -->

	<!-- video -->
	<div class="absolute bottom-0 top-0 h-screen w-full">
		<video
			class="object-cover w-full h-full bg-image"
			autoplay
			loop
			muted
			src={video}></video>

		<!-- <Image
			class="object-cover w-full h-full bg-image"
			src={tractor}
			alt="Image of tractor"
		/> -->
	</div>
</section>

<style>
	hr {
		margin: auto;
		/* padding: .1rem 0; */
		margin: 1rem 0;
		width: 100%;
		border: none;
		background: linear-gradient(
			to right,
			transparent 0%,
			#4daa57 50%,
			transparent 100%
		);
	}
	span {
		color: var(--color-subtitle);
	}
	.h1 {
		padding: 1rem;
		border-radius: 1rem;
		display: flex;
		justify-content: center;
	}
	.bg-image {
		/* width: 100%; */
		/* height: 100vh; */
		object-fit: cover;

		mask: radial-gradient(circle at right, white 30%, transparent 100%);
	}
	header {
		display: flex;
		flex-direction: column;
		align-items: start;
		border-radius: 0.25rem;
		text-align: start;
		gap: 1.5rem;
	}
</style>
