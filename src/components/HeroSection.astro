---
import video from "../video/1080HeroCacta.mp4";
import bg from "../icons/bg.svg";
import DinamicTitle from "./DinamicTitle.astro";
---

<section
	class="w-screen h-screen text-center bg-black/90 relative overflow-hidden text-white z-40"
	data-header-color="white">
	<div
		class="z-50 absolute m-auto top-0 bottom-0 flex flex-col items-center justify-center w-full md:w-1/2">
		<span class="block m-auto w-full h1">
			<header class="header">
				<!-- svg -->

				<img
					class="absolute max-w-[75%] right-0 left-0 top-0 bottom-0 m-auto brightness-200"
					src={bg.src}
					alt="bg svg"
				/>

				<!-- svg -->
				<h1 class="text-white text-5xl md:text-6xl font-bold">
					<strong class="font-semibold">Cacta~Eco</strong><br />
					<span
						class="text-6xl md:text-[5rem] font-bold tracking-wider"
						>Software</span
					>
					<hr />
				</h1>
				<h2 class="text-white text-3xl font-semibold">
					<p class="text-xl">La puerta al futuro de la</p>
					<p class="text-white text-4xl font-semibold">
						<span class="font-bold">industria agr√≠cola</span>
					</p>
					<DinamicTitle />

					<p class="font-semibold text-xl text-white">
						el impacto ambiental de tu empresa.
					</p>
				</h2>
			</header>
		</span>
	</div>

	<!-- <footer
		class="absolute text-md font-semibold m-auto right-0 left-0 inline-block bottom-10 z-40">
		<a
			class="p-2 rounded px-6 py-2 backdrop-blur-md bg-white/20 hover:bg-white hover:text-white"
			href="#">
			Comienza Gratis</a
		>
	</footer> -->

	<!-- video -->
	<div class="absolute bottom-0 top-0 h-screen w-full">
		<video
			class="object-cover w-full h-full bg-image"
			autoplay
			loop
			muted
			src={video}></video>

		<!-- <Image
			class="object-cover w-full h-full bg-image"
			src={tractor}
			alt="Image of tractor"
		/> -->
	</div>

	<style>
		hr {
			margin: auto;
			padding: 0.1rem 0;
			margin: 0.25rem 0;
			width: 100%;
			border: none;
			background: linear-gradient(
				to right,
				transparent 0%,
				#4daa57 50%,
				transparent 100%
			);
		}
		span {
			color: var(--color-subtitle);
		}

		.bg-image {
			object-fit: cover;
			mask: radial-gradient(circle at right, white 60%, transparent 100%);
		}
		header {
			display: flex;
			flex-direction: column;
			align-items: center;
			border-radius: 0.25rem;
			text-align: start;
			gap: 1.5rem;
		}
	</style>
</section>
